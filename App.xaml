<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:firmware_upgrade"
             xmlns:converters="clr-namespace:firmware_upgrade.Converters"
             x:Class="firmware_upgrade.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                <ResourceDictionary>
                    <converters:PercentToDoubleConverter x:Key="PercentToDoubleConverter" />
                    <converters:BoolToConnectionColorConverter x:Key="BoolToConnectionColorConverter" />
                    <converters:BoolToConnectionStatusConverter x:Key="BoolToConnectionStatusConverter" />
                    <converters:BoolToConnectButtonTextConverter x:Key="BoolToConnectButtonTextConverter" />
                    <converters:BoolToConnectButtonColorConverter x:Key="BoolToConnectButtonColorConverter" />
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
